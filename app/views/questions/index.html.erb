<h2>Questions</h2>

<div class="row">
  <div class="col-md-12">
    <table class="table-striped">
      <thead class="thead-light">
        <tr>
          <td>ID</td>
          <td>Title</td>
          <td>Menu</td>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.id %></td>
            <td><%= link_to question.title, question_path(question) %></td>
            <td>[<%= link_to "Edit", edit_question_path(question) %>]</td>
            <td>[<%= link_to "Destroy", question_path(question), method: :delete, data:{ confirm: "Are you sure?" } %>]</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= link_to "New question", new_question_path  %>
    </div>
  </div>
</div>

